{
  "kind": "collectionType",
  "collectionName": "content_templates",
  "info": {
    "singularName": "content-template",
    "pluralName": "content-templates",
    "displayName": "Content Template",
    "description": "Reusable content templates for social media posts"
  },
  "options": {
    "draftAndPublish": true,
    "comment": "Content templates for quick post creation"
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": ["promotional", "educational", "entertainment", "news", "announcement", "event", "custom"],
      "default": "custom"
    },
    "content": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "variables": {
      "type": "json",
      "default": []
    },
    "platforms": {
      "type": "enumeration",
      "enum": ["facebook", "instagram", "twitter", "linkedin", "tiktok", "youtube"],
      "multiple": true
    },
    "defaultMedia": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "videos"]
    },
    "hashtags": {
      "type": "json",
      "default": []
    },
    "seoMetadata": {
      "type": "json",
      "default": {
        "metaTitle": "",
        "metaDescription": "",
        "keywords": []
      }
    },
    "campaigns": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::campaign.campaign",
      "mappedBy": "templates"
    },
    "usageCount": {
      "type": "integer",
      "default": 0
    },
    "isPublic": {
      "type": "boolean",
      "default": false
    },
    "createdBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "tags": {
      "type": "json",
      "default": []
    }
  }
}
