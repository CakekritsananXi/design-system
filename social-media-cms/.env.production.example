# Production Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=1337
APP_KEYS=CHANGE_ME_KEY_1,CHANGE_ME_KEY_2,CHANGE_ME_KEY_3,CHANGE_ME_KEY_4
API_TOKEN_SALT=CHANGE_ME_SALT
ADMIN_JWT_SECRET=CHANGE_ME_ADMIN_JWT
TRANSFER_TOKEN_SALT=CHANGE_ME_TRANSFER_SALT
JWT_SECRET=CHANGE_ME_JWT_SECRET
PUBLIC_URL=https://your-domain.com

# Database Configuration (PostgreSQL)
DATABASE_CLIENT=postgres
DATABASE_HOST=your-db-host.com
DATABASE_PORT=5432
DATABASE_NAME=social_media_cms_production
DATABASE_USERNAME=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true
DATABASE_CA_CERT=
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Redis Configuration
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Social Media API Keys - Facebook/Instagram
FACEBOOK_APP_ID=your_production_facebook_app_id
FACEBOOK_APP_SECRET=your_production_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_production_facebook_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_id

# Social Media API Keys - Twitter/X
TWITTER_API_KEY=your_production_twitter_api_key
TWITTER_API_SECRET=your_production_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_production_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_production_twitter_access_secret
TWITTER_BEARER_TOKEN=your_production_twitter_bearer_token

# Social Media API Keys - LinkedIn
LINKEDIN_CLIENT_ID=your_production_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_production_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_production_linkedin_access_token

# Social Media API Keys - TikTok
TIKTOK_CLIENT_KEY=your_production_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_production_tiktok_client_secret
TIKTOK_ACCESS_TOKEN=your_production_tiktok_access_token

# Social Media API Keys - YouTube
YOUTUBE_API_KEY=your_production_youtube_api_key
YOUTUBE_CLIENT_ID=your_production_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_production_youtube_client_secret
YOUTUBE_REFRESH_TOKEN=your_production_youtube_refresh_token

# CDN Configuration - Cloudinary
CDN_ENABLED=true
CDN_URL=https://res.cloudinary.com/your-cloud-name
CDN_PROVIDER=cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 Configuration (Alternative)
UPLOAD_PROVIDER=cloudinary
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-production-bucket

# Email Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_PROVIDER_API_KEY=your_sendgrid_api_key
EMAIL_DEFAULT_FROM=noreply@your-domain.com
EMAIL_DEFAULT_REPLY_TO=support@your-domain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Cron Jobs
CRON_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/app/logs

# Security
CORS_ENABLED=true
CORS_ORIGIN=https://your-domain.com,https://admin.your-domain.com
IS_PROXIED=true

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key

# Environment
NODE_ENV=production
